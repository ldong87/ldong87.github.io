source 'https://rubygems.org'

# Jekyll and its dependencies
gem 'jekyll', '~> 4.3.2'
gem 'webrick', '~> 1.8'

# Jekyll plugins
group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-gist'
  gem 'jekyll-paginate'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
end

# Other dependencies
gem 'activesupport', '~> 7.0.0'
gem 'bigdecimal'
gem 'csv'  # Required for Ruby 3.4+
gem 'logger'  # Will be required for Ruby 3.5+
gem 'base64'  # Required for Ruby 3.4+

# Sass dependencies
gem 'sass-embedded', '~> 1.87.0'
gem 'breakpoint', '~> 2.7.1'  # Breakpoint Sass library
gem 'susy', '~> 2.2.14'  # Susy grid system
gem 'faraday-retry'  # For Faraday v2.0+ retry middleware
